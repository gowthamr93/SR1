<?xml version="1.0" encoding="utf-8" ?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:colors="clr-namespace:ServiceRequest.AppContext;assembly=ServiceRequest"
             x:Class="ServiceRequest.Views.ViewCells.ParagraphViewCell">
  <Grid Padding="5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="5*" />
      <ColumnDefinition Width="20*" />
      <ColumnDefinition Width="75*" />
    </Grid.ColumnDefinitions>

    <Image x:Name="Img_Delete" Aspect="AspectFit" HeightRequest="30" WidthRequest="30"
           HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Grid.Column="0" />

    <Label x:Name="Lbl_Type" Text="Type" TextColor="{x:Static colors:Styles.MainAccent}" HeightRequest="30" WidthRequest="100"
           HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

    <Label x:Name="Lbl_Paragraph" Text=" Paragraph" TextColor="{x:Static colors:Styles.MainAccent}" HeightRequest="30" WidthRequest="500"
           HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  Grid.Column="2" LineBreakMode="TailTruncation"
          HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

  </Grid>
</ViewCell>